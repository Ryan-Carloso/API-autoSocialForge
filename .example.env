# ----------------------------------
# Server Configuration
# ----------------------------------
PORT=3000
# Set to true to run in development mode (saves files locally, posts as draft)
IS_DEV=true

# ----------------------------------
# API Keys
# ----------------------------------
API_KEY_POSTBRIDGE=YOUR_POSTBRIDGE_API_KEY
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# ----------------------------------
# Supabase Configuration (File Storage)
# ----------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_BUCKET=postbridge
SUPABASE_FOLDER=posts/

# ----------------------------------
# Account Groups & Content Sources
# ----------------------------------
# Define groups of social accounts and their corresponding content source.
# Format:
# ACCOUNTS_<GROUP_NAME>=id1,id2,id3
# CONTENT_PATH_<GROUP_NAME>=<URL_OR_LOCAL_PATH>

# Example Group: Gym/Fitness
ACCOUNTS_GYM=12345,67890
CONTENT_PATH_GYM=https://example.supabase.co/rest/v1/gym_content?select=*&apikey=YOUR_KEY

# Example Group: Tech
ACCOUNTS_TECH=11111,22222
CONTENT_PATH_TECH=https://example.supabase.co/rest/v1/gym_content?select=*&apikey=YOUR_KEY
