# ----------------------------------
# Server Configuration
# ----------------------------------
PORT=3000
# Set to true to post as draft (no real post), useful for testing
IS_DEV=true

# ----------------------------------
# PostBridge API Configuration
# ----------------------------------
API_KEY_POSTBRIDGE=YOUR_API_KEY_HERE
# Optional Overrides (defaults are usually sufficient)
# POSTBRIDGE_URL=https://api.post-bridge.com/v1
# POSTBRIDGE_POSTS_URL=https://api.post-bridge.com/v1/posts
# POSTBRIDGE_UPLOAD_URL=https://api.post-bridge.com/v1/media/create-upload-url

# ----------------------------------
# AI Configuration
# ----------------------------------
# Choose between 'gemini' or 'openai'
AI_PROVIDER=gemini

# If using Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# If using OpenAI
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------
# Supabase Configuration (Storage)
# ----------------------------------
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_KEY=YOUR_SUPABASE_KEY
SUPABASE_BUCKET=postbridge
SUPABASE_FOLDER=posts/

# ----------------------------------
# Account Groups & Content Paths
# ----------------------------------
# Configuration Rules:
# 1. Define a group using ACCOUNTS_<NAME>=<comma_separated_ids>
# 2. Define the content source using CONTENT_PATH_<NAME>=<path_to_ts_file>
# 
# The content file must export an 'ideas' or 'default' array of strings.
# ----------------------------------

# Example Group: Football
# To get your account IDs, visit: https://api.post-bridge.com/reference
# ACCOUNTS_FOOTBALL=12345,67890
# CONTENT_PATH_FOOTBALL=src/contents/football.ts

# Example Group: Gym (Using Supabase JSON URL)
# You can use a direct Supabase REST URL that returns a JSON array of topics.
# Structure example: { "id": "...", "topic": "...", "title": "...", "content": "..." }
ACCOUNTS_GYM=11111,22222
CONTENT_PATH_GYM=https://YOUR_PROJECT.supabase.co/rest/v1/your_table?select=*&apikey=YOUR_PUBLIC_KEY
